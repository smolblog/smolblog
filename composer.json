{
  "name": "smolblog/smolblog-core",
  "description": "Core features for Smolblog independent of other frameworks",
  "type": "library",
  "license": "AGPL-3.0-only",
  "autoload": {
    "psr-4": {
      "Smolblog\\Core\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Smolblog",
      "email": "dev@smolblog.org"
    },
    {
      "name": "Evan Hildreth",
      "email": "me@eph.me"
    }
  ],
  "repositories": [
    {
      "type": "path",
      "url": "tests/_pluginStub",
      "options": {
        "reference": "none"
      }
    }
  ],
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.0",
    "phpunit/phpunit": "^9",
    "smoltest/plugin-stub": "*"
  },
  "scripts": {
    "test": "export XDEBUG_MODE=coverage; phpunit --testsuite core; cat coverage.txt",
    "lint": "./vendor/squizlabs/php_codesniffer/bin/phpcs",
    "lintfix": "./vendor/squizlabs/php_codesniffer/bin/phpcbf"
  },
  "require": {
    "psr/container": "^2.0",
    "psr/event-dispatcher": "^1.0",
    "league/container": "^4.2",
    "league/event": "^3.0",
    "league/tactician": "^1.1",
    "league/tactician-container": "^3.0"
  }
}
