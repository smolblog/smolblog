{
  "name": "smolblog/smolblog-core",
  "description": "Core features for Smolblog independent of other frameworks",
  "type": "library",
  "license": "AGPL-3.0-only",
  "autoload": {
    "psr-4": {
      "Smolblog\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Smolblog\\Mock\\": "mock-app/"
    }
  },
  "authors": [
    {
      "name": "Smolblog",
      "email": "dev@smolblog.org"
    },
    {
      "name": "Evan Hildreth",
      "email": "me@eph.me"
    }
  ],
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/oddevan/http-signatures-php"
    },
    {
      "type": "vcs",
      "url": "https://github.com/smolblog/activitypub-types"
    }
  ],
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.0",
    "phpunit/phpunit": "^9"
  },
  "scripts": {
    "coverage": "export XDEBUG_MODE=coverage; phpunit --testsuite core; cat coverage.txt",
    "test": "phpunit --testsuite core",
    "integration": "phpunit --testsuite integration",
    "lint": "./vendor/squizlabs/php_codesniffer/bin/phpcs",
    "lintfix": "./vendor/squizlabs/php_codesniffer/bin/phpcbf",
    "swagger": "Smolblog\\Api\\Model::printSpec"
  },
  "require": {
    "php": "^8.1",
    "psr/container": "^2.0",
    "psr/event-dispatcher": "^1.0",
    "ramsey/uuid": "^4.6",
    "crell/tukio": "^1.4",
    "cebe/markdown": "^1.2",
    "psr/http-message": "^1.1 || ^2.0",
    "phpseclib/phpseclib": "^3.0",
    "guzzlehttp/psr7": "^2.5",
    "psr/http-client": "^1.0",
    "liamdennehy/http-signatures-php": "dev-use-upstream-phpseclib",
    "smolblog/activitypub-types": "^1.0",
    "illuminate/database": "^9.0",
    "taproot/micropub-adapter": "^0.1.1"
  }
}
