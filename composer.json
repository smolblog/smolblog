{
    "name": "smolblog/smolblog",
    "description": "Blogging for the Social Web",
    "license": "AGPL-3.0-only",
    "type": "project",
    "authors": [
        {
            "name": "Smolblog",
            "email": "dev@smolblog.org"
        },
        {
            "name": "Evan Hildreth",
            "email": "me@eph.me"
        }
    ],
    "require": {
        "cavatappi/foundation": "^0.2",
        "cavatappi/testing": "^0.2",
        "doctrine/dbal": "^4.2",
        "elephox/mimey": "^4.0",
        "php": "^8.4",
        "psr/container": "^2.0",
        "psr/event-dispatcher": "^1.0",
        "crell/serde": "dev-master"
    },
    "require-dev": {
        "symplify/monorepo-builder": "^11.2"
    },
    "replace": {
        "smolblog/core": "self.version",
        "smolblog/core-data-sql": "self.version",
        "smolblog/core-test-utils": "self.version"
    },
    "autoload": {
        "psr-4": {
            "Smolblog\\CoreDataSql\\": "packages/core-data-sql/src/",
            "Smolblog\\Core\\": "packages/core/src/",
            "Smolblog\\Core\\Test\\": "packages/core-test-utils/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Smolblog\\CoreDataSql\\Test\\": "packages/core-data-sql/src-test/",
            "Smolblog\\Core\\Test\\": "packages/core/src-test/"
        }
    },
    "scripts": {
        "test": "phpunit --testdox --no-coverage",
        "test-fast": "phpunit --testsuite unit --no-coverage",
        "test-coverage": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit --testsuite unit",
            "Smolblog\\Test\\CoverageReport::report"
        ],
        "lint": "./vendor/squizlabs/php_codesniffer/bin/phpcs",
        "lintfix": "./vendor/squizlabs/php_codesniffer/bin/phpcbf",
        "monorepo": "./vendor/bin/monorepo-builder"
    }
}
