{
    "name": "smolblog/framework-foundation",
    "description": "Foundational base objects for building a system",
    "type": "library",
    "license": "Apache-2.0",
    "autoload": {
        "psr-4": {
            "Smolblog\\Framework\\Foundation\\": "src/"
        }
    },
	"authors": [
		{
			"name": "Smolblog",
			"email": "dev@smolblog.org"
		},
		{
			"name": "Evan Hildreth",
			"email": "me@eph.me"
		}
	],
	"require": {
		"php": "^8.2",
		"psr/http-message": "^1.0",
        "ramsey/uuid": "^4.7",
        "psr/event-dispatcher": "^1.0",
        "crell/tukio": "^1.6"
	},
    "require-dev": {
        "pestphp/pest": "^2.34",
        "squizlabs/php_codesniffer": "^3.9"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
	"scripts": {
        "test": "XDEBUG_MODE=coverage pest --coverage --min=100 --path-coverage",
        "lint": "./vendor/squizlabs/php_codesniffer/bin/phpcs",
        "lintfix": "./vendor/squizlabs/php_codesniffer/bin/phpcbf"
    }
}
