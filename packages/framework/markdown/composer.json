{
  "name": "smolblog/smolblog-markdown",
  "description": "A superset of Markdown with some Smolblog flair.",
  "type": "library",
  "require": {
    "php": "^8.2",
    "cebe/markdown": "^1.2"
  },
  "license": "Apache-2.0",
  "repositories": [
    {
      "type": "path",
      "url": "../test-utils"
    }
  ],
  "minimum-stability": "dev",
  "autoload": {
    "psr-4": {
      "Smolblog\\Markdown\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Smolblog",
      "email": "dev@smolblog.org"
    },
    {
      "name": "Evan Hildreth",
      "email": "me@eph.me"
    }
  ],
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.8",
    "smolblog/test-utils": "*"
  },
  "scripts": {
    "test": "XDEBUG_MODE=coverage phpunit --coverage-text",
    "lint": "./vendor/squizlabs/php_codesniffer/bin/phpcs",
    "lintfix": "./vendor/squizlabs/php_codesniffer/bin/phpcbf"
  }
}
