<?xml version="1.0"?>
<ruleset name="Smolblog Core Standards" namespace="Smolblog\Core">
	<description>Coding standards for the Smolblog core library.</description>

	<file>./packages/framework/activitypub/src</file>
	<file>./packages/framework/infrastructure/src</file>
	<file>./packages/framework/markdown/src</file>
	<file>./packages/framework/objects/src</file>
	<file>./packages/product/activitypub/src</file>
	<file>./packages/product/c2pa/src</file>
	<file>./packages/product/core/src</file>
	<file>./packages/product/indieweb/src</file>
	<file>./packages/product/micro-blog/src</file>
	<file>./packages/product/rest-api/src</file>
	<file>./packages/product/tumblr/src</file>

	<exclude-pattern>*/tests/*</exclude-pattern>
	<exclude-pattern>*/test-utils/*</exclude-pattern>
	<exclude-pattern>/packages/framework/test-utils/*</exclude-pattern>
	<exclude-pattern>/integration-tests/*</exclude-pattern>
	<exclude-pattern>/mock-app/*</exclude-pattern>

	<arg name="extensions" value="php"/>
	<arg name="tab-width" value="2"/>
	<arg name="colors"/>

	<ini name="memory_limit" value="64M"/>

	<autoload>./vendor/autoload.php</autoload>

	<!-- Use PSR-12 as our base -->
	<rule ref="PSR12">
		<exclude name="Generic.WhiteSpace.DisallowTabIndent"/>
		<exclude name="Generic.WhiteSpace.ScopeIndent"/>
		<exclude name="PSR2.Classes.ClassDeclaration.OpenBraceNewLine"/>
		<exclude name="Squiz.Functions.MultiLineFunctionDeclaration.BraceOnSameLine"/>
	</rule>

	<!-- Use tabs, please. Please. Seriously. -->
	<rule ref="Generic.WhiteSpace.DisallowSpaceIndent"/>
	<rule ref="Generic.WhiteSpace.ScopeIndent">
		<properties>
			<property name="indent" value="2"/>
			<property name="tabIndent" value="true"/>
			<property name="ignoreIndentationTokens" type="array">
				<element value="T_COMMENT"/>
				<element value="T_DOC_COMMENT_OPEN_TAG"/>
			</property>
		</properties>
	</rule>

	<!-- Add Squiz commenting rules -->
	<rule ref="Squiz.Commenting">
		<!-- Functions and classes already have comments -->
		<exclude name="Squiz.Commenting.FileComment"/>
		<!-- Contradicted by PSR-12. -->
		<exclude name="Squiz.Commenting.ClosingDeclarationComment"/>
		<!-- We need to make use of some of these tags -->
		<exclude name="Squiz.Commenting.ClassComment.TagNotAllowed"/>
		<!-- Seriously? Sometimes you just need a good comment on a line. -->
		<exclude name="Squiz.Commenting.PostStatementComment.Found"/>
		<!-- Same with an annotation. -->
		<exclude name="Squiz.Commenting.PostStatementComment.AnnotationFound"/>
	</rule>

	<!-- Make structures look nicer -->
	<rule ref="Generic.Classes.OpeningBraceSameLine"/>
	<rule ref="Generic.Functions.OpeningFunctionBraceKernighanRitchie"/>
</ruleset>