{
  "name": "smolblog/core",
  "description": "Core features for Smolblog",
  "type": "library",
  "license": "AGPL-3.0-only",
  "repositories": [
    {
      "type": "path",
      "url": "../../framework/foundation"
    },
    {
      "type": "path",
      "url": "../../framework/test-utils"
    }
  ],
  "minimum-stability": "dev",
  "autoload": {
    "psr-4": {
      "Smolblog\\Core\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Smolblog",
      "email": "dev@smolblog.org"
    },
    {
      "name": "Evan Hildreth",
      "email": "me@eph.me"
    }
  ],
  "require-dev": {
    "smolblog/test-utils": "*"
  },
	"scripts": {
		"test": "XDEBUG_MODE=coverage phpunit --coverage-text",
		"lint": "./vendor/squizlabs/php_codesniffer/bin/phpcs",
		"lintfix": "./vendor/squizlabs/php_codesniffer/bin/phpcbf"
	},
  "require": {
    "php": "^8.2",
    "psr/container": "^2.0",
    "psr/http-client": "^1.0",
    "illuminate/database": "^9.0",
    "psr/log": "^3.0",
    "elephox/mimey": "^4.0",
    "smolblog/foundation": "*"
  }
}
