{
  "name": "smolblog/core",
  "description": "Core features for Smolblog",
  "type": "library",
  "license": "AGPL-3.0-only",
  "repositories": [
    {
      "type": "path",
      "url": "../../framework/foundation"
    },
    {
      "type": "path",
      "url": "../../framework/objects"
    },
    {
      "type": "path",
      "url": "../../framework/test-utils"
    },
    {
      "type": "path",
      "url": "../../framework/infrastructure"
    },
    {
      "type": "path",
      "url": "../../framework/markdown"
    }
  ],
  "minimum-stability": "dev",
  "autoload": {
    "psr-4": {
      "Smolblog\\Core\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Smolblog",
      "email": "dev@smolblog.org"
    },
    {
      "name": "Evan Hildreth",
      "email": "me@eph.me"
    }
  ],
  "require-dev": {
    "smolblog/test-utils": "*"
  },
  "scripts": {
    "test": "export XDEBUG_MODE=coverage; phpunit --coverage-text",
    "test-fast": "phpunit --no-coverage",
    "lint": "./vendor/squizlabs/php_codesniffer/bin/phpcs",
    "lintfix": "./vendor/squizlabs/php_codesniffer/bin/phpcbf"
  },
  "require": {
    "php": "^8.2",
    "psr/container": "^2.0",
    "psr/event-dispatcher": "^1.0",
    "cebe/markdown": "^1.2",
    "phpseclib/phpseclib": "^3.0",
    "psr/http-client": "^1.0",
    "illuminate/database": "^9.0",
    "taproot/micropub-adapter": "^0.1.1",
    "psr/log": "^3.0",
    "elephox/mimey": "^4.0",
    "tumblr/tumblr": "^0.4.2",
    "smolblog/framework-foundation": "*",
    "smolblog/framework-objects": "*",
    "smolblog/framework-infrastructure": "*",
    "smolblog/smolblog-markdown": "*"
  }
}
